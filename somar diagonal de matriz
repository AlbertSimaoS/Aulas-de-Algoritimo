#include <stdio.h>

int main()
{
    int mat[4][4];
    int soma = 0;
    printf("Escreva os elementos da matriz 4x4: \n");
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            printf("Elemento [%d][%d]: ", i + 1, j + 1);
            scanf("%d", &mat[i][j]);
        }
    }
    printf("\tMatriz\n\n");
    for (int i = 0; i < 4; i++)
    {
        for (int j = 0; j < 4; j++)
        {
            printf("%d ", mat[i][j]);
            if (i == j)
                soma = soma + mat[i][j];
        }
        printf("\n");
    } 
    printf("SomatÃ³rio: %d", soma);
    return 0;
}
